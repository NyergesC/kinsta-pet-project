// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Trip {
  id              String  @id @default(uuid())
  destination     String
  description     String
  distance        String
  duration        String
  src             String
  alt             String
  reviews         Review[]
  tripCategory    TripCategory @relation(fields: [tripCategoryId], references: [id])
  tripCategoryId  String

}

model User {
  id        String @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  reviews   Review[]
  blog      Blog?
}

model Review {
  id        String @id @default(uuid())
  createdAt DateTime @default(now())
  comment   String
  text      String
  rating    Int
  author    User @relation(fields: [authorId], references: [id])
  authorId  String
  trip      Trip @relation(fields: [tripId], references: [id])
  tripId    String
}

model TripCategory {
  id        String @id @default(uuid())
  name      String
  trips     Trip[]
}

model Blog {
  id          String @id @default(uuid())
  title       String
  createdAt   DateTime @default(now())
  updateAt    DateTime @default(now())
  small       String
  body        String
  author      User @relation(fields: [authorId], references: [id])
  authorId    String @unique
}